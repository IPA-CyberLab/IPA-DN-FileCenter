@inject Server server;
@{
    Page.Title = "";
}

<h2 class="title is-4">@Page.FullTitle</h2>

<form asp-controller="Home" asp-action="Upload" enctype="multipart/form-data" method="post">
    <div class="box">
        <div class="content">

            <p>ファイルをアップロードできます。</p>

            <div class="field">
                <label class="label">Name</label>
                <div class="control">
                    <input class="input" type="text" placeholder="Text input">
                </div>
            </div>

            <div id="file-js-example" class="file has-name">
                <label class="file-label">
                    <input class="file-input" type="file" name="resume" multiple="multiple">
                    <span class="file-cta">
                        <span class="file-icon">
                            <i class="fas fa-upload"></i>
                        </span>
                        <span class="file-label">
                            Choose a file…
                        </span>
                    </span>
                    <span class="file-name">
                        No file uploaded
                    </span>
                </label>
            </div>

            <div class="field">
                <label class="label">Username</label>
                <div class="control has-icons-left has-icons-right">
                    <input class="input is-success" type="text" placeholder="Text input" value="bulma">
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                    <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                    </span>
                </div>
                <p class="help is-success">This username is available</p>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">ファイル 1</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control">
                            <div class="select is-fullwidth">
                                <input type="file" name="file1" multiple="multiple" />
                            </div>
                        </p>
                    </div>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">ファイル 1</label>
                </div>
                <div class="field-body">
                    <div class="field is-narrow">
                        <div class="control">
                            <div class="select is-fullwidth">
                                <input type="file" name="file1" multiple="multiple" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">ファイル 1</label>
                </div>
                <div class="field-body">
                    <div class="field is-narrow">
                        <div class="control">
                            <div class="select is-fullwidth">
                                <input type="file" name="file1" multiple="multiple" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <input type="submit" value="アップロード" />
        </div>
    </div>
</form>


@section scripts {

    <script type="text/javascript">

        function UploadButtonOnChange(control)
        {
            
        }

  const fileInput = document.querySelector('#file-js-example input[type=file]');
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector('#file-js-example .file-name');
      fileName.textContent = fileInput.files[0].name;
    }
  }

    </script>

}

